<header class="header">
    <div class="top">
        <!-- <img src="#" alt="Burger menu"> -->
        <a href=""><i class="fa-solid fa-bars"></i></a>
        <h1>CATEGORIES</h1>
        <%= link_to '/sign_out_user', class: "btn-user" do %>
            <i class="fa-solid fa-lock"></i>
          <% end %>
        <!-- <i class="fa fa-search" aria-hidden="true"></i> -->
    </div>
    <div class="bottom">
        <div>
            <%= link_to "Most recent", root_path(order: :recent), class: "recent" %>
            <i class="fa-solid fa-circle toggleable"></i>
        </div>        
        <div>
            <%= link_to "Most ancient", root_path(order: :ancient), class: "ancient" %>
            <i class="fa-solid fa-circle toggleable"></i>
        </div>
    </div>
</header>
<div class="notification">
    <%= flash[:notice] %>
    <%= flash[:error] %>
    <%= flash[:alert] %>
</div>
<div class="list-groups">
    <div class="total-wrapper">
        <p class="total">Total amount</p>
        <p class="price">$<%= @group_expenses %></p>
    </div>
    <ul class="groups">
        <% @groups.each do |group| %>
            <li>
            <%= link_to group_path(group) do %>
                <div class="icon-name-wrapper">
                <%= image_tag(group.icon, class: "icon", alt: "Icon") %>
                <div>
                    <p class="total"><%= group.name %></p>
                    <p class="gn-date"><%= group.created_at %></p>
                </div>
                </div>
                <p class="tr-price">$<%= group.expenses.sum(:amount) %></p>
            <% end %>
            </li>
        <% end %>
    </ul>
    <div class="add-category-wrapper">
        <a href="/groups/new" class="add-category">+</a>
    </div>  
</div>